generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Gender {
  male
  female
}

model students {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  firstName    String
  surName      String
  otherName    String?
  gender       Gender
  image        String
  fingerPrint  Bytes? 
  phone        String     
  email        String?
  examsDate    String?  
  courses      String[]
  faculty      String
  department   String
  level        String
  matricNumber String     @unique
  registrar    String     @db.ObjectId
  registrarRel registrars @relation(fields: [registrar], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
}

model registrars {
  id       String     @id @default(auto()) @map("_id") @db.ObjectId
  name     String     @unique
  password String
  students students[]

  updatedAt DateTime @updatedAt()
  createdAt DateTime @default(now())
}

